{
    "configurations": [
        {
            "host": "localhost",
            // Example of attaching to local debug server
            "name": "Python: Attach Local",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "port": 5678,
            "request": "attach",
            "type": "python"
        },
        {
            "host": "homeassistant.local",
            // Example of attaching to my production server
            "name": "Python: Attach Remote Home Assistant",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/src/homeassistant"
                }
            ],
            "port": 5678,
            "request": "attach",
            "type": "python"
        },
        {
            "host": "127.0.0.1",
            // Example of attaching to my production server
            "name": "Python: Attach Remote",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "port": 5678,
            "request": "attach",
            "type": "python"
        }
    ],
